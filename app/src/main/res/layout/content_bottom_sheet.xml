<?xml version="1.0" encoding="utf-8"?>
<com.easycore.christmastree.views.MyRevealFrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<View android:id="@+id/revealView"
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:visibility="invisible"
		  android:background="@color/colorPrimary"/>

	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical">

		<TextView android:id="@+id/bottomSheetButton"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  style="@style/ClickableTextViewStyle"
				  android:minHeight="60dp"
				  android:layout_marginTop="4dp"
				  android:layout_marginBottom="4dp"
				  android:padding="@dimen/activity_horizontal_margin"
				  android:gravity="end"
				  tools:textColor="@android:color/black"
				  android:text="@string/color_question"/>

		<android.support.v7.widget.GridLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:alignmentMode="alignBounds"
				app:columnCount="3"
				app:rowOrderPreserved="false"
				app:useDefaultMargins="true">

			<TextView android:id="@+id/redColorTxtView"
					  android:layout_width="0dp"
					  android:layout_height="wrap_content"
					  app:layout_columnWeight="1"
					  app:layout_gravity="fill_horizontal"
					  android:gravity="center_horizontal"
					  style="@style/ColorButtons"
					  tools:textColor="@android:color/black"
					  android:drawableTop="@drawable/circle_red"
					  android:text="@string/color_red"/>

			<TextView android:id="@+id/greenColorTxtView"
					  android:layout_width="0dp"
					  android:layout_height="wrap_content"
					  app:layout_columnWeight="1"
					  app:layout_gravity="fill_horizontal"
					  style="@style/ColorButtons"
					  tools:textColor="@android:color/black"
					  android:drawableTop="@drawable/circle_green"
					  android:text="@string/color_green"/>

			<TextView android:id="@+id/blueColorTxtView"
					  android:layout_width="0dp"
					  android:layout_height="wrap_content"
					  app:layout_columnWeight="1"
					  app:layout_gravity="fill_horizontal"
					  style="@style/ColorButtons"
					  tools:textColor="@android:color/black"
					  android:drawableTop="@drawable/circle_blue"
					  android:text="@string/color_blue"/>

			<TextView android:id="@+id/yellowColorTxtView"
					  android:layout_width="0dp"
					  android:layout_height="wrap_content"
					  app:layout_columnWeight="1"
					  app:layout_gravity="fill_horizontal"
					  style="@style/ColorButtons"
					  tools:textColor="@android:color/black"
					  android:drawableTop="@drawable/circle_yellow"
					  android:text="@string/color_yellow"/>

			<TextView android:id="@+id/purpleColorTxtView"
					  android:layout_width="0dp"
					  android:layout_height="wrap_content"
					  app:layout_columnWeight="1"
					  app:layout_gravity="fill_horizontal"
					  style="@style/ColorButtons"
					  tools:textColor="@android:color/black"
					  android:drawableTop="@drawable/circle_purple"
					  android:text="@string/color_purple"/>

			<TextView android:id="@+id/orangeColorTxtView"
					  android:layout_width="0dp"
					  android:layout_height="wrap_content"
					  app:layout_columnWeight="1"
					  app:layout_gravity="fill_horizontal"
					  style="@style/ColorButtons"
					  tools:textColor="@android:color/black"
					  android:drawableTop="@drawable/circle_orange"
					  android:text="@string/color_silver"/>

		</android.support.v7.widget.GridLayout>

		<TextView android:id="@+id/submitButton"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:minHeight="70dp"
				  style="@style/ClickableTextViewStyle"
				  android:background="#66000000"
				  android:gravity="center"
				  tools:textColor="@android:color/black"
				  android:text="@string/change_color"/>

	</LinearLayout>


</com.easycore.christmastree.views.MyRevealFrameLayout>